FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

COPY exporters/barbican-exporter/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

COPY exporters/barbican-exporter/app.py /app/app.py

EXPOSE 9100

CMD ["python", "/app/app.py"]

